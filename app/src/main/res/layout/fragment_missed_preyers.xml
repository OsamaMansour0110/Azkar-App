<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:textDirection="rtl">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TOP CONTROLS SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <!-- Button to Open Dialog -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_open_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#263238"
                    android:text="Calculate Missed Prayers"
                    android:textAllCaps="false"
                    android:textColor="#FFD54F"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
                    app:iconTint="#FFD54F"
                    app:strokeColor="#FFD54F"
                    app:strokeWidth="1dp" />

                <!-- Add/Minus All Buttons (Moved from Bottom) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_minus_all"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:text="Minus 1 All"
                        android:textColor="#B0BEC5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        app:strokeColor="#546E7A"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_all"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:text="Add 1 All"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:backgroundTint="#37474F"
                        app:cornerRadius="12dp"
                        app:strokeColor="#546E7A"
                        app:strokeWidth="0dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Fajr -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_name_fajr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fajr"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_minus_fajr"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:padding="0dp"
                            android:text="-"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            app:strokeWidth="1dp" />

                        <TextView
                            android:id="@+id/tv_count_fajr"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="fajr"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_plus_fajr"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:backgroundTint="#2D2D2D"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:padding="0dp"
                            android:text="+"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            app:elevation="0dp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Dhuhr -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_name_dhuhr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dhuhr"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_minus_dhuhr"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:padding="0dp"
                            android:text="-"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            app:strokeWidth="1dp" />

                        <TextView
                            android:id="@+id/tv_count_dhuhr"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="dhuhr"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_plus_dhuhr"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:backgroundTint="#2D2D2D"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:padding="0dp"
                            android:text="+"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            app:elevation="0dp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Asr -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_name_asr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asr"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_minus_asr"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:padding="0dp"
                            android:text="-"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            app:strokeWidth="1dp" />

                        <TextView
                            android:id="@+id/tv_count_asr"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="asr"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_plus_asr"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:backgroundTint="#2D2D2D"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:padding="0dp"
                            android:text="+"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            app:elevation="0dp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Maghrib -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_name_maghrib"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maghrib"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_minus_maghrib"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:padding="0dp"
                            android:text="-"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            app:strokeWidth="1dp" />

                        <TextView
                            android:id="@+id/tv_count_maghrib"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="maghrib"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_plus_maghrib"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:backgroundTint="#2D2D2D"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:padding="0dp"
                            android:text="+"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            app:elevation="0dp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Isha -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_name_isha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="isha"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_minus_isha"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:padding="0dp"
                            android:text="-"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            app:strokeWidth="1dp" />

                        <TextView
                            android:id="@+id/tv_count_isha"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="isha"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_plus_isha"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:backgroundTint="#2D2D2D"
                            android:insetLeft="0dp"
                            android:insetTop="0dp"
                            android:insetRight="0dp"
                            android:insetBottom="0dp"
                            android:padding="0dp"
                            android:text="+"
                            android:textSize="20sp"
                            app:cornerRadius="12dp"
                            app:elevation="0dp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Buttons: Now only contains Update Progress -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomActionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:elevation="24dp"
        android:paddingTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Scan/Update Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_update_progress_disabled"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#20000000"
                android:enabled="false"
                android:text="Update your progress"
                android:textColor="#808080"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="16dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>