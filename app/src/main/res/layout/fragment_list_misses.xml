<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:layoutDirection="rtl">

    <!-- Header Section (Top Anchored) -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="-0.02"
            android:text="ماذا تريد أن تعوض؟"
            android:textColor="#1F2937"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="6dp"
            android:text="قم بمتابعة ما فاتك وأكمل عباداتك\nبشكل منتظم وميسر"
            android:textColor="#6B7280"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Content Area (Fills remaining space) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbarThumbVertical="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <!-- Gravity Center ensures content sits in the middle of the empty space -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingBottom="48dp">

            <!-- Card 1: Prayers (Blue Theme) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_missed_prayers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:outlineSpotShadowColor="#D4DDE5"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:rippleColor="#E0F2FE"
                app:strokeColor="#A7F3D0"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="40dp">

                    <!-- 3D Floating Icon Container -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:layout_marginBottom="24dp"
                        android:outlineSpotShadowColor="#3B82F6"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="44dp"
                        app:cardElevation="10dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:src="@drawable/prayer" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Text Content -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="تعويض صلوات"
                        android:textColor="#0F172A"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="متابعة الصلوات"
                        android:textColor="#64748B"
                        android:textSize="14sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2: Fasting (Orange Theme) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_fasting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:outlineSpotShadowColor="#D4DDE5"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:rippleColor="#FFF7ED"
                app:strokeColor="#A7F3D0"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="40dp">

                    <!-- 3D Floating Icon Container -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:layout_marginBottom="24dp"
                        android:outlineSpotShadowColor="#F97316"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="44dp"
                        app:cardElevation="10dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="57dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:src="@drawable/tired" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Text Content -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="صيام"
                        android:textColor="#0F172A"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="قضاء الأيام"
                        android:textColor="#64748B"
                        android:textSize="14sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>