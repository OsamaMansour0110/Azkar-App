<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إضافة أيام"
            android:textColor="#212121"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDialogSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="أدخل تفاصيل الأيام التي تريد تعديلها في خطتك."
            android:textColor="#757575"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDialogTitle" />

        <!-- 1. Operation Type Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilOperationType"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="نوع التعديل"
            app:boxStrokeColor="#00695C"
            app:hintTextColor="#00695C"
            app:layout_constraintTop_toBottomOf="@id/tvDialogSubtitle">

            <AutoCompleteTextView
                android:id="@+id/actvOperationType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="إضافة إلى الموجود"
                android:textColor="#212121" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 2. Day Type Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDayType"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="نوع الأيام"
            app:boxStrokeColor="#00695C"
            app:hintTextColor="#00695C"
            app:layout_constraintTop_toBottomOf="@id/tilOperationType">

            <AutoCompleteTextView
                android:id="@+id/actvDayType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="أيام عادية"
                android:textColor="#212121" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDaysInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="عدد الأيام"
            app:boxStrokeColor="#00695C"
            app:hintTextColor="#00695C"
            app:layout_constraintTop_toBottomOf="@id/tilDayType">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDaysInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#212121" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="end"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tilDaysInput">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="إلغاء"
                android:textColor="#757575" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00695C"
                android:text="حفظ"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>