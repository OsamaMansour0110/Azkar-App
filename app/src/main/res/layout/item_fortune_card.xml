<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="10dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="24dp"
    app:cardElevation="5dp"
    app:strokeColor="#F1F5F9"
    app:strokeWidth="1.5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="18dp">

        <!-- Main Legend Text -->
        <TextView
            android:id="@+id/tvMainText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="5sp"
            android:text="In the journey of life, every moment presents a new opportunity to redefine our destiny. Embrace the challenges that come your way."
            android:textColor="#0F172A"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Subtle Subtext -->
        <TextView
            android:id="@+id/tvSubText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="12dp"
            android:alpha="0.7"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Tap to reveal deep insights and details..."
            android:textColor="#64748B"
            android:textSize="11sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMainText" />

        <!-- Premium Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#F1F5F9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubText" />

        <!-- Row: Counter & Actions -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <!-- Counter Pill: (Only Score and Plus) -->
            <LinearLayout
                android:id="@+id/counterContainer"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:background="@drawable/bg_counter_pill"
                android:backgroundTint="#312E81"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="24dp"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlus"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="8dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:cornerRadius="19dp" />
            </LinearLayout>

            <!-- Add Score Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddScore"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="12dp"
                android:fontFamily="sans-serif-medium"
                android:text="Add Score"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                app:backgroundTint="#059669"
                app:cornerRadius="22dp"
                app:elevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnPreview"
                app:layout_constraintStart_toEndOf="@+id/counterContainer"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Preview Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPreview"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:backgroundTint="#F1F5F9"
                app:cornerRadius="22dp"
                app:icon="@drawable/more_detail"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="20dp"
                app:iconTint="#1E293B"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>