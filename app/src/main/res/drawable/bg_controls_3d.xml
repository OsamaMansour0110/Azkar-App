<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Surface (Darker part to create 3D depth) -->
    <item android:top="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="#B0BEC5" />
        </shape>
    </item>

    <!-- Main Surface (Lighter part) -->
    <item android:bottom="6dp" android:right="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#ECEFF1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#90A4AE" />
        </shape>
    </item>
</layer-list>