<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#20000000">
    <item>
        <layer-list>
            <!-- Shadow/Depth (Light Gray) -->
            <item android:top="6dp">
                <shape android:shape="oval">
                    <solid android:color="#D1D4DD" />
                </shape>
            </item>

            <!-- Main Button Face (White/Ice Gradient) -->
            <item android:bottom="6dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="linear"
                        android:angle="270"
                        android:startColor="#FFFFFF"
                        android:endColor="#F1F3F9" />
                    <stroke
                        android:width="1dp"
                        android:color="#BDBDBD" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>